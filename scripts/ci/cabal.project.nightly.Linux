max-backjumps: 5000
reorder-goals: True
tests: True
benchmarks: True

program-options
  ghc-options: -fno-ignore-asserts -Werror

package strict-checked-vars
  flags: +checktvarinvariants +checkmvarinvariants

package ntp-client
  flags: +demo

package network-mux
  flags: +ipv6

-- IPv6 tests are DISABLED
package ouroboros-network
  flags: +asserts -ipv6

package cardano-diffusion
  flags: +asserts +cddl
